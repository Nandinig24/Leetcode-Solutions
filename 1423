class Solution {
public:

    int maxScore(vector<int>& c, int k) {
        int sum=0;
        int mx=0;
        for(int i=0;i<c.size();i++){
            sum+=c[i];
            }
        int r=c.size()-k;
        int s=0;
        for(int i=0;i<r;i++){
            s+=c[i];
            }
        mx=max(mx,sum-s);
        for(int i=r;i<c.size();i++){
            s-=c[i-r];
            s+=c[i];
            mx=max(sum-s,mx);
            }
      return mx;

    }
};