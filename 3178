class Solution {
public:
    int numberOfChild(int n, int k) {
    int cu = 0;
        
        if(n>k)
            return k;
        
        int dir = 1; 
        for (int i = 0; i < k; i++) {
            cu += dir;
            if ( cu == n - 1|| cu == 0 ) {
                dir =dir*(-1);
            }
        }

        return cu;
    }
};