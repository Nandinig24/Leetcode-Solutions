class Solution {
public:
    int minSteps(string s, string t) {
        vector<int>hsh1(26),hsh2(26);
        for(int i=0;i<s.size();i++){
            hsh1[s[i]-'a']++;
            hsh2[t[i]-'a']++;

        }
        int ans=0;
        for(int i=0;i<26;i++){
            ans+=abs(hsh1[i]-hsh2[i]);
        }
        return ans/2;
    }
};