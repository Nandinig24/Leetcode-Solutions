class Solution {
public:
    int minOperations(int k) {
        int ans=INT_MAX;
        for(int i=1;i<=k;i++){
            int r=i-1;
            int r1=k-i;
            if(r1%i==0){
                r+=(r1/i);
            }
            else{
                r+=(r1/i);
                r++;
            }
            ans=min(ans,r);
        }
        return ans;
        
    }
};