class Solution {
public:
    int minimumBoxes(vector<int>& apple, vector<int>& c) {
        int sum=0;
        for(int i=0;i<apple.size();i++)
        sum+=apple[i];
        int k=0;

        sort(c.rbegin(),c.rend());
        for(int i=0;i<c.size();i++){
            if(sum>c[i]){
            k++;
            sum-=c[i];
            }
            else{
                k++;
                break;
            }
        }
        return k;
        
    }
};