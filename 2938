class Solution {
public:
    long long minimumSteps(string s) {
        vector<int>v;
        int c=0;
        long long ans=0;
        for(int i=0;i<s.size();i++){
            if(s[i]=='1')
                c++;
            v.push_back(c);
            
        }
        for(int i=0;i<s.size();i++){
            if(s[i]=='0')
                ans+=v[i];
        }
        return ans;
        
    }
};