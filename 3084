class Solution {
public:
    long long countSubstrings(string s, char c) {
        vector<int>v;
        long long sum=0;
        for(int i=0;i<s.size();i++){
            if(s[i]==c)
                v.push_back(i);
        }
        // int sum=0;
        for(int i=0;i<v.size();i++){
            sum+=v.size()-i;
            
            
        }
        return sum;
        
    }
};